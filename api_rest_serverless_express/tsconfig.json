{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["es2015"],
    "rootDir": "./",
    "preserveConstEnums": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"],
}
